{
  "compilerOptions": {
    "outDir": "./chrome_extension/build/",
    "noImplicitAny": false,
    "importsNotUsedAsValues": "remove",
    "module": "esNext",
    "target": "es6",
    "allowJs": true,
    "moduleResolution": "node",
    "esModuleInterop": true,
    "sourceMap": true,
    "isolatedModules": true,
    "baseUrl": ".",
    "paths": {
      "client/*": ["client/*"]
    },
    "types": [
      "svelte",
      "svelte/store",
      "svelte/motion",
      "svelte/transition",
      "svelte/animate",
      "svelte/easing",
      "chrome"
    ]
  },
  "include": ["client/*"],
  "exclude": ["./node_modules/*"],
  "extends": "@tsconfig/svelte/tsconfig.json",
  "ts-node": {
    "compilerOptions": {
      "module": "commonjs"
    }
  }
}
